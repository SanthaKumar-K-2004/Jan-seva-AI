# ==========================================================
# Jan-Seva AI - Environment Variables
# ==========================================================
# Copy this to .env and fill in your values.
# Never commit real API keys.

# --- App ---
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# --- Supabase (optional for analytics/admin paths) ---
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# --- Groq (multi-key rotation) ---
GROQ_API_KEY=
GROQ_API_KEY_2=
GROQ_API_KEY_3=

# --- Google Gemini (multi-key rotation) ---
GOOGLE_API_KEY=
GOOGLE_API_KEY_2=
GOOGLE_API_KEY_3=

# --- OpenAI (multi-key failover/rotation) ---
OPENAI_API_KEY=
OPENAI_API_KEY_2=
OPENAI_API_KEY_3=
# Optional comma-separated additional keys:
OPENAI_API_KEYS_CSV=
OPENAI_MODEL=gpt-5-nano
OPENAI_MAX_TOKENS=4096
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.15
ENABLE_OPENAI_RESEARCH_PROVIDER=true

# --- NVIDIA ---
NVIDIA_API_KEY=
NVIDIA_API_KEY_GLM=
NVIDIA_MODEL=qwen/qwen3.5-397b-a17b

# --- Search ---
TAVILY_API_KEY=

# --- News ---
NEWS_API_KEY=
# Trusted domains only (comma-separated)
NEWS_ALLOWED_DOMAINS_CSV=pib.gov.in,thehindu.com,economictimes.indiatimes.com,business-standard.com,livemint.com,hindustantimes.com

# --- Source quality / verification ---
STRICT_VERIFIED_MODE=true
MIN_SOURCE_RELIABILITY=0.67
MAX_SOURCE_AGE_DAYS=45
MAX_NEWS_AGE_DAYS=21
REQUIRE_MULTI_SOURCE_FOR_NEWS=true

# --- Research cache ---
RESEARCH_CACHE_ENABLED=true
RESEARCH_CACHE_TTL_MINUTES=180
RESEARCH_CACHE_PATH=data/research_cache.sqlite3

# --- Wikipedia ---
WIKIPEDIA_CLIENT_ID=
WIKIPEDIA_CLIENT_SECRET=
WIKIPEDIA_ACCESS_TOKEN=

# --- Voice ---
WHISPER_MODEL_SIZE=base

# --- Translation (Bhashini) ---
BHASHINI_USER_ID=
BHASHINI_API_KEY=

# --- WhatsApp ---
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
